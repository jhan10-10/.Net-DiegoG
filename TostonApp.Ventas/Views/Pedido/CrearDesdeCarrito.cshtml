@{
    ViewData["Title"] = "Crear Pedido desde Carrito";
}

<div class="main-content">
    <h1>Crear Pedido desde Carrito</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form asp-controller="Pedido" asp-action="CrearDesdeCarrito" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Cédula (opcional)</label>
            <input name="cedula" class="form-control" maxlength="100" />
        </div>

        <div class="form-group">
            <label>Observaciones (opcional)</label>
            <textarea name="observaciones" class="form-control" rows="4" maxlength="500"></textarea>
        </div>

        <button class="btn-success" type="submit">Crear Pedido</button>
        <a class="btn-secondary" href="@Url.Action("Index", "Carrito")">Cancelar</a>
    </form>
</div>
