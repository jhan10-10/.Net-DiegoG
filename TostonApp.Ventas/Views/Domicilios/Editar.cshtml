@model TostonApp.Ventas.Models.Domicilio
@{
    ViewData["Title"] = "Editar Entrega";
}

<div class="main-content">
    <div class="page-header">
        <h1>Editar Entrega</h1>
    </div>

    <form method="post">

        <input type="hidden" asp-for="ID_entrega" />

        <div class="form-group">
            <label>N° Venta</label>
            <input asp-for="ID_venta" class="form-control" />
        </div>

        <div class="form-group">
            <label>Fecha</label>
            <input asp-for="Fecha" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Estado</label>
            <input asp-for="Estado" class="form-control" />
        </div>

        <div class="form-group">
            <label>Dirección</label>
            <input asp-for="Direccion" class="form-control" />
        </div>

        <div class="form-group">
            <label>Ciudad</label>
            <input asp-for="Ciudad" class="form-control" />
        </div>

        <div class="form-group">
            <label>Responsable</label>
            <input asp-for="Responsable" class="form-control" />
        </div>

        <div class="form-group">
            <label>Teléfono</label>
            <input asp-for="Telefono" class="form-control" />
        </div>

        <div class="form-group">
            <label>Costo Envío</label>
            <input asp-for="CostoEnvio" class="form-control" />
        </div>

        <div class="form-group">
            <label>Observaciones</label>
            <textarea asp-for="Observaciones" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn-primary">Guardar Cambios</button>
        <a href="/Domicilios" class="btn-secondary">Volver</a>
    </form>
</div>
