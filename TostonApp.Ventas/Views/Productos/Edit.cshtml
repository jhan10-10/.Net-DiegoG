@model TostonApp.Ventas.Models.Producto
@{
    ViewData["Title"] = "Editar Producto";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="main-content">
    <div class="card">
        <div class="card-header flex-between">
            <div>
                <h1>Editar Producto</h1>
                <p class="muted">Actualiza precios y stock del inventario.</p>
            </div>
            <div>
                <span class="badge badge-secondary">ID #@Model.ID_Producto.ToString("000000")</span>
            </div>
        </div>

        <form asp-action="Edit" method="post" class="card-body">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ID_Producto" />

            <div class="grid-2">
                <div class="form-group">
                    <label>Nombre <span class="text-danger">*</span></label>
                    <input asp-for="Nombre" class="form-control" maxlength="100" required />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Precio <span class="text-danger">*</span></label>
                    <input asp-for="Precio" type="number" step="0.01" min="0" class="form-control" required />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
            </div>

            <div class="grid-2">
                <div class="form-group">
                    <label>Stock <span class="text-danger">*</span></label>
                    <input asp-for="Stock" type="number" min="0" class="form-control" required />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Estado</label>
                    <select asp-for="Activo" class="form-control">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label>Descripción</label>
                <textarea asp-for="Descripcion" class="form-control" maxlength="500" rows="4"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="actions">
                <button type="submit" class="btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a href="@Url.Action("Details", "Productos", new { id = Model.ID_Producto })" class="btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>
