@model TostonApp.Ventas.Models.Devolucion

@{
    ViewData["Title"] = "Registrar Devolución";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-container {
        background-color: white;
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        max-width: 800px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #2C3E50;
        }

            .form-group label.required::after {
                content: " *";
                color: #E53935;
            }

    .form-control {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #E0E0E0;
        border-radius: 8px;
        font-size: 1rem;
    }

        .form-control:focus {
            outline: none;
            border-color: #7CB342;
            box-shadow: 0 0 0 3px rgba(124, 179, 66, 0.1);
        }

    .text-danger {
        color: #E53935;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid #E0E0E0;
    }

    .btn-success, .btn-secondary {
        padding: 0.75rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-success {
        background-color: #7CB342;
        color: white;
    }

        .btn-success:hover {
            background-color: #558B2F;
        }

    .btn-secondary {
        background-color: #7F8C8D;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #6c757d;
        }

    .alert {
        padding: 1rem;
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }

    .alert-danger {
        background-color: #FFEBEE;
        color: #C62828;
        border-left: 4px solid #E53935;
    }

    .page-header {
        margin-bottom: 2rem;
    }

        .page-header h1 {
            font-size: 2rem;
            color: #2C3E50;
            font-weight: 600;
        }
</style>

<div class="page-header">
    <h1>Registrar Devolución</h1>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @TempData["Error"]
    </div>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> Por favor corrija los siguientes errores:
        <ul style="margin: 0.5rem 0 0 1.5rem;">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<form asp-action="Crear" method="post" class="form-container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ID_venta" class="required">Venta</label>
        <select asp-for="ID_venta" class="form-control" required>
            <option value="">-- Seleccione una venta --</option>
            @if (ViewBag.Ventas != null && ((List<TostonApp.Ventas.Models.Venta>)ViewBag.Ventas).Any())
            {
                @foreach (var venta in (List<TostonApp.Ventas.Models.Venta>)ViewBag.Ventas)
                {
                    <option value="@venta.ID_venta">
                        Venta #@venta.ID_venta.ToString("000000") -
                        Fecha: @venta.Fecha_Venta.ToString("dd/MM/yyyy") -
                        Total: $@venta.Total.ToString("N2")
                    </option>
                }
            }
            else
            {
                <option value="" disabled>No hay ventas disponibles</option>
            }
        </select>
        <span asp-validation-for="ID_venta" class="text-danger"></span>
        @if (ViewBag.Ventas == null)
        {
            <small style="color: red;">DEBUG: ViewBag.Ventas es NULL</small>
        }
        else if (!((List<TostonApp.Ventas.Models.Venta>)ViewBag.Ventas).Any())
        {
            <small style="color: red;">DEBUG: No hay ventas completadas en la base de datos</small>
        }
    </div>

    <div class="form-group">
        <label asp-for="ID_Producto" class="required">ID Producto</label>
        <input asp-for="ID_Producto" type="number" class="form-control"
               placeholder="Ingrese el ID del producto" required />
        <span asp-validation-for="ID_Producto" class="text-danger"></span>
        <small style="color: #7F8C8D;">Ingrese el ID del producto manualmente</small>
    </div>

    <div class="form-group">
        <label asp-for="Motivo" class="required">Motivo de la Devolución</label>
        <select asp-for="Motivo" class="form-control" required>
            <option value="">-- Seleccione un motivo --</option>
            <option value="Producto defectuoso">Producto defectuoso</option>
            <option value="No corresponde al pedido">No corresponde al pedido</option>
            <option value="Cliente insatisfecho">Cliente insatisfecho</option>
            <option value="Producto vencido">Producto vencido</option>
            <option value="Otro">Otro</option>
        </select>
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MontoDevolucion" class="required">Monto a Devolver</label>
        <input asp-for="MontoDevolucion" type="number" step="0.01" class="form-control"
               placeholder="Ingrese el monto" required />
        <span asp-validation-for="MontoDevolucion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="required">Estado</label>
        <select asp-for="Estado" class="form-control" required>
            <option value="Pendiente" selected>Pendiente</option>
            <option value="Aprobada">Aprobada</option>
            <option value="Rechazada">Rechazada</option>
        </select>
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Observaciones">Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control" rows="4"
                  placeholder="Detalles adicionales sobre la devolución (opcional)"></textarea>
        <span asp-validation-for="Observaciones" class="text-danger"></span>
    </div>

    <div class="form-actions">
        <button type="submit" class="btn-success">
            <i class="fas fa-save"></i> Registrar Devolución
        </button>
        <a href="@Url.Action("Index", "Devoluciones")" class="btn-secondary">
            <i class="fas fa-times"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}