@model TostonApp.Ventas.Models.Agenda

@{
    ViewData["Title"] = "Crear Evento de Agenda";
}

<h2>Crear nuevo registro en Agenda</h2>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label>Título</label>
        <input class="form-control" asp-for="Titulo" />
    </div>

    <div class="form-group">
        <label>Descripción</label>
        <textarea class="form-control" asp-for="Descripcion"></textarea>
    </div>

    <div class="form-group">
        <label>Fecha</label>
        <input type="date" class="form-control" asp-for="Fecha" />
    </div>

    <div class="form-group">
        <label>Hora</label>
        <input class="form-control" asp-for="Hora" />
    </div>

    <div class="form-group">
        <label>Estado</label>
        <input class="form-control" asp-for="Estado" />
    </div>

    <div class="form-group">
        <label>Tipo Evento</label>
        <input class="form-control" asp-for="TipoEvento" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a href="/Agenda" class="btn btn-secondary">Volver</a>
    </div>
</form>
