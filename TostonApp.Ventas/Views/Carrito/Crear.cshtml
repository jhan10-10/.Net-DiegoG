@model TostonApp.Ventas.Models.CarritoCompra
@{
    ViewData["Title"] = "Agregar al Carrito";
}

<div class="main-content">
    <h1>Agregar Producto al Carrito</h1>

    <form asp-controller="Carrito" asp-action="Crear" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="form-group">
            <label>Producto *</label>
            <select asp-for="ID_Producto" class="form-control" asp-items="@(ViewBag.Productos as List<SelectListItem>)" required>
                <option value="">-- Seleccione un producto --</option>
            </select>
            <span asp-validation-for="ID_Producto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Cantidad *</label>
            <input asp-for="Cantidad" type="number" min="1" max="999999" class="form-control" required />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Precio Unitario (automático)</label>
            <input class="form-control" value="Se toma del producto" disabled />
        </div>

        <div class="form-group">
            <label>Subtotal (automático)</label>
            <input class="form-control" value="Cantidad x Precio" disabled />
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-success">Guardar</button>
            <a class="btn-secondary" href="@Url.Action("Index", "Carrito")">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
}
