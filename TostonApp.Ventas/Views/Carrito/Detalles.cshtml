@model TostonApp.Ventas.Models.CarritoCompra
@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="main-content">
    <div class="page-header">
        <h1>Detalles del Producto en Carrito</h1>
    </div>

    <div class="details-container">
        <div class="detail-row">
            <label>ID Carrito:</label>
            <span>@Model.ID_Carrito.ToString("000000")</span>
        </div>

        <div class="detail-row">
            <label>ID Usuario:</label>
            <span>@Model.ID_Carrito.ToString("000000")</span>

        </div>

        <div class="detail-row">
            <label>ID Producto:</label>
            <span>@Model.ID_Producto.ToString("000000")</span>
        </div>

        <div class="detail-row">
            <label>Precio Unitario:</label>
            <span>${@Model.PrecioUnitario.ToString("N2")}</span>
        </div>

        <div class="detail-row">
            <label>Cantidad:</label>
            <span>@Model.Cantidad</span>
        </div>

        <div class="detail-row">
            <label>Subtotal:</label>
            <span><strong>${@Model.Subtotal.ToString("N2")}</strong></span>
        </div>

        <div class="detail-row">
            <label>Fecha Agregado:</label>
            <span>@Model.FechaAgregado.ToString("dd/MM/yyyy HH:mm:ss")</span>
        </div>

        <div class="detail-row">
            <label>Estado:</label>
            <span>
                @if (Model.Activo)
                {
                    <span class="badge badge-success">Activo</span>
                }
                else
                {
                    <span class="badge badge-danger">Inactivo</span>
                }
            </span>
        </div>
    </div>

    <div class="form-actions">
        <a asp-action="Editar" asp-route-id="@Model.ID_Carrito" class="btn-primary">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Eliminar" asp-route-id="@Model.ID_Carrito" class="btn-danger">
            <i class="fas fa-trash"></i> Eliminar
        </a>
        <a asp-action="Index" class="btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver al Carrito
        </a>
    </div>
</div>

<style>
    .details-container {
        background-color: #f5f5f5;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .detail-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #ddd;
    }

        .detail-row:last-child {
            border-bottom: none;
        }

        .detail-row label {
            font-weight: bold;
            color: #333;
            width: 30%;
        }

        .detail-row span {
            color: #666;
            width: 70%;
            text-align: right;
        }
</style>
